<!DOCTYPE html>
<html lang="en">
<head>
<title>Freelance Matching System Admin</title>
<%include partials/template/headlink.ejs %>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-formhelpers/2.3.0/css/bootstrap-formhelpers.min.css" rel="stylesheet" media="screen">
</head>
<body>

<!--Header-part-->
<div id="header">
  <h1><a href="/admin">Freelance Matching System Admin</a></h1>
</div>
<!--close-Header-part-->


<!--top-Header-menu-->
<%include partials/template/topHeaderMenu.ejs %>
<!--close-top-Header-menu-->

<!--start-top-serch-->
<%include partials/template/searchBar.ejs %>
<!--close-top-serch-->


<!--sidebar-menu-->
<%include partials/template/sidebarMenu.ejs %>
<!--sidebar-menu-->

<!--main-container-part-->
<div id="content">

<!--breadcrumbs navigation-->
<div id="content-header">
  <div id="breadcrumb">
     <a href="/admin" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a>
     <a href="/updateUser" title="Go to Update User" class="tip-bottom"><i class="icon-user"></i> Update User</a>
   </div>
</div>
<!--End-breadcrumbs navigation-->

<!-- write your container here -->


<div class="edit-form">
  <div class="row-fluid">
    <div class="span1">
    </div>
    <div class="span10">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon"><i class="icon-bookmark"></i></span>
          <h5>Edit User Information</h5>
        </div>
        <!-- end of title -->
        <div class="widget-content nopadding">
          <% if (error && error.length > 0){%>
          <div class="alert alert-danger">
             <strong>Error!</strong> <%=error%>
          </div>
          <% } else if (success && success.length > 0) {%>
          <div class="alert alert-success">
             <strong>Success!</strong> <%=success%>
          </div>
          <% }%>
          <form action="/admin/updateUser?_method=PUT" method="post" class="form-horizontal" id="edit-form">
            <div class="control-group has-feedback">
              <label class="control-label">User Name :</label>
              <div class="controls">
                <input type="text" class="span11" placeholder="username" name="user[username]" id="username" value="<%= foundUser.username %>"/>
              </div>
            </div>
            <div class="control-group has-feedback">
              <label class="control-label">First Name :</label>
              <div class="controls">
                <input type="text" class="span11" placeholder="First name" name="user[firstName]" id="firstname" value="<%= foundUser.firstName%>"/>
              </div>
            </div>
            <div class="control-group has-feedback">
              <label class="control-label">Last Name :</label>
              <div class="controls">
                <input type="text" class="span11" placeholder="Last name" name="user[lastName]" id="lastname" value="<%= foundUser.lastName%>"/>
              </div>
            </div>
            <div class="control-group has-feedback">
              <label class="control-label">Password input :</label>
              <div class="controls">
                <input type="password"  class="span11" placeholder="Enter Password"  id="password"/>
              </div>
            </div>
            <div class="control-group has-feedback">
              <label class="control-label">Confirm Password :</label>
              <div class="controls">
                <input type="password"  class="span11" placeholder="Enter Password"  name="user[password]" id="retype-password"/>
              </div>
            </div>
            <div class="control-group has-feedback">
              <label class="control-label">Country:</label>
              <div class="controls">
                <select class="form-control input-lg bfh-countries" name="user[country]" id="country" value="<%= foundUser.country %>"></select>
              </div>
            </div>
            <div class="control-group has-feedback">
              <label class="control-label">Email:</label>
              <div class="controls">                <input type="text" class="span11" placeholder="abc@email.com" name="user[email]" id="email" value="<%= foundUser.email %>"/>
              </div>
            </div>
            <div class="control-group has-feedback">
              <label class="control-label">Balance :</label>
              <div class="controls">
                <input type="text" class="span11" placeholder="$300,000" name="user[balance]" id="balance" value="<%= foundUser.balance %>"/>
              </div>
            </div>
            <div class="form-actions">
              <input type="hidden" name="user[_id]" value="<%= foundUser._id %>">
              <input type="submit" class="btn btn-success btn-save" value="Save"/>
            </div>
          </form>

        </div>
        <!-- end of widget content -->
      </div>
    </div>
    <!-- end of widget box -->
    <div class="span1">
    </div>
  </div>
  <!-- end fo the second row of content -->
</div>
<!-- end of your container here -->

</div>
<!--end-main-container-part-->

<!--Footer-part-->
<footer>
<%include partials/template/footer.ejs %>
</footer>
<!--end-Footer-part-->
<script src="/js/admin/jquery.min.js"></script>
<script src="/js/admin/jquery.ui.custom.js"></script>
<script src="/js/admin/bootstrap.min.js"></script>
<script src="/js/admin/jquery.uniform.js"></script>
<script src="/js/admin/select2.min.js"></script>
<script src="/js/admin/jquery.dataTables.min.js"></script>
<script src="/js/admin/matrix.js"></script>
<script src="/js/admin/matrix.tables.js"></script>
<script src="/js/maintainUser.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-formhelpers/2.3.0/js/bootstrap-formhelpers.min.js"></script>

</body>
</html>
